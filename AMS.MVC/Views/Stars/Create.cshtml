@model AMS.MVC.ViewModels.MovieStarViewModel.MovieStarCreateViewModel

@{
    ViewData["Title"] = "Attach star to movie";
}

<h2 class="mb-0">Attach star to movie</h2>

<hr class="my-4" />

<form asp-controller="Stars" asp-action="Create">
    <div class="row form-group">
        <label asp-for="SelectedPerson" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SelectedPerson" asp-items="Model.Persons" class="form-control"></select>
        </div>
    </div>
    
    <div class="row form-group">
        <label asp-for="Character" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Character" class="form-control" />
            <span asp-validation-for="Character" class="d-inline-block mt-1 text-danger"></span>
        </div>
    </div>
    
    <div class="row form-group">
        <div class="col-sm-12">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="ml-2 btn btn-danger" asp-controller="Movies" asp-action="Show" asp-route-id="@Context.Request.RouteValues["movieId"]">Cancel</a>
        </div>
    </div>
</form>
