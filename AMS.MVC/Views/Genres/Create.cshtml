@model AMS.MVC.ViewModels.GenreViewModels.GenreCreateViewModel

@{
    ViewData["Title"] = "Create genre";
}

<h2 class="mb-0">Create genre</h2>

<hr class="my-4" />

<form asp-controller="Genres" asp-action="Create">
    <div class="row form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="d-inline-block mt-1 text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-12">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="ml-2 btn btn-danger" asp-controller="Genres" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>
