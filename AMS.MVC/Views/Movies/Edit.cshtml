@model AMS.MVC.ViewModels.MovieViewModels.MovieEditViewModel

@{
    ViewData["Title"] = "Edit movie";
}

<h2 class="mb-0">Edit movie</h2>

<hr class="my-4" />

<form asp-action="Edit">
    <div class="row form-group">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="d-inline-block mt-1 text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="d-inline-block mt-1 text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="ReleaseDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ReleaseDate" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="d-inline-block mt-1 text-danger"></span>
        </div>
    </div>
    
    <div class="row form-group">
        <label asp-for="Genres" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-items="Model.Genres" asp-for="SelectedGenres" class="form-control" multiple="multiple"></select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-12">
            <input class="btn btn-primary" type="submit" value="Update" />
            <a class="btn btn-danger" asp-controller="Movies" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>
