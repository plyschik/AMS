@model AMS.MVC.ViewModels.MovieViewModels.MovieShowViewModel

@{
    ViewData["Title"] = "Movie details";

    var canCreate = (await AuthorizationService.AuthorizeAsync(User, Model.Movie, MovieStarOperations.Create)).Succeeded;
    var canEdit = (await AuthorizationService.AuthorizeAsync(User, Model.Movie, MovieStarOperations.Edit)).Succeeded;
    var canDelete = (await AuthorizationService.AuthorizeAsync(User, Model.Movie, MovieStarOperations.Delete)).Succeeded;
}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Movie details</h2>
    <div>
        @if ((await AuthorizationService.AuthorizeAsync(User, Model.Movie, MovieOperations.Edit)).Succeeded)
        {
            <a class="btn btn-success" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.Movie.Id">Edit</a>   
        }
        
        @if (User.IsInRole("Administrator"))
        {
            <a class="btn btn-danger" asp-controller="Movies" asp-action="ConfirmDelete" asp-route-id="@Model.Movie.Id">Delete</a>   
        }
    </div>
</div>

<hr class="my-4" />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Movie.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Movie.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Movie.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Movie.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Movie.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Movie.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Movie.ReleaseDate)
    </dd>
    
    @if (Model.Genres.Any())
    {
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Genres.Select(genre => genre.Name))
        </dd>
    }
    
    @if (Model.Directors.Any())
    {
        <dt class="col-sm-2">
            Directors
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Directors.Select(person => person.FullName))
        </dd>
    }
    
    @if (Model.Writers.Any())
    {
        <dt class="col-sm-2">
            Writers
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Writers.Select(person => person.FullName))
        </dd>
    }
</dl>


<div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Stars</h2>
    
    @if (canCreate)
    {
        <a class="btn btn-success" asp-controller="Stars" asp-action="Create" asp-route-id="@Model.Movie.Id">Create</a>
    }
</div>

<hr class="my-4" />

@if (!Model.Stars.Any())
{
    <div class="alert alert-info" role="alert">
        Stars list is empty.
    </div>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr class="d-flex">
                <th class="@((canEdit || canDelete) ? "col-5" : "col-6")">Actor</th>    
                <th class="@((canEdit || canDelete) ? "col-5" : "col-6")">Character</th>
                
                @if (canEdit || canDelete)
                {
                    <th class="col-2"></th>   
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var star in Model.Stars)
            {
                <tr class="d-flex">
                    <td class="@((canEdit || canDelete) ? "col-5" : "col-6") d-flex align-items-center">@star.Person.FullName</td>
                    <td class="@((canEdit || canDelete) ? "col-5" : "col-6") d-flex align-items-center">@star.Character</td>
                    
                    @if (canEdit || canDelete)
                    {
                        <td class="col-2 d-flex align-items-center justify-content-end">
                            @if (canEdit)
                            {
                                <a asp-controller="Stars" asp-action="Edit" asp-route-movieId="@star.MovieId" asp-route-personId="@star.PersonId" class="btn btn-primary mr-1">Edit</a>    
                            }
                        
                            @if (canDelete)
                            {
                                <a asp-controller="Stars" asp-action="ConfirmDelete" asp-route-movieId="@star.MovieId" asp-route-personId="@star.PersonId" class="btn btn-danger">Delete</a>   
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
