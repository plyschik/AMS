@model AMS.MVC.Data.Models.Movie

@{
    ViewData["Title"] = "Movie details";

    var genres = Model.MovieGenres.Select(mg => mg.Genre).ToList();
    var directors = Model.MovieDirectors.Select(md => md.Person).ToList();
    var writers = Model.MovieWriters.Select(mw => mw.Person).ToList();
}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Movie details</h2>
    <a class="btn btn-primary" asp-controller="Movies" asp-action="Index">Go back to list</a>
</div>

<hr class="my-4" />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(movie => movie.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(movie => movie.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(movie => movie.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(movie => movie.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(movie => movie.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(movie => movie.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(movie => movie.ReleaseDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReleaseDate)
    </dd>
    
    @if (genres.Any())
    {
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", genres.Select(genre => genre.Name))
        </dd>
    }
    
    @if (directors.Any())
    {
        <dt class="col-sm-2">
            Directors
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", directors.Select(person => person.FullName))
        </dd>
    }
    
    @if (writers.Any())
    {
        <dt class="col-sm-2">
            Writers
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", writers.Select(person => person.FullName))
        </dd>
    }
</dl>

@if ((await AuthorizationService.AuthorizeAsync(User, Model, MovieOperations.Edit)).Succeeded)
{
    <a class="btn btn-success" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>   
}

@if (User.IsInRole("Administrator"))
{
    <a class="btn btn-danger" asp-controller="Movies" asp-action="ConfirmDelete" asp-route-id="@Model.Id">Delete</a>   
}
